# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET 	/facebook					controllers.Application.facebook
GET		/google						controllers.Application.google
GET		/quote						controllers.Application.quote
GET		/reg						controllers.Application.reg
POST	/reg						controllers.Application.reg

GET		/register					controllers.Application.register
POST	/register					controllers.Application.register






GET         /callback                         @org.pac4j.play.CallbackController.callback()
POST        /callback                         @org.pac4j.play.CallbackController.callback()
GET         /logout                           @org.pac4j.play.ApplicationLogoutController.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.versioned(path="/public", file: Asset)




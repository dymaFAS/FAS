# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#login
GET 	/facebook					controllers.login.LoginSocial.facebook
GET		/google						controllers.login.LoginSocial.google
GET		/reg						controllers.login.LoginForm.reg
POST	/reg						controllers.login.LoginForm.reg
GET		/register					controllers.login.LoginForm.register
POST	/register					controllers.login.LoginForm.register
GET		/confirm/*id				controllers.login.LoginForm.confirm(id)



GET		/quote						controllers.Application.quote


#portfolio
GET  	/recordings               	controllers.Application.recordings



GET         /callback                         @org.pac4j.play.CallbackController.callback()
POST        /callback                         @org.pac4j.play.CallbackController.callback()
GET         /logout                           @org.pac4j.play.ApplicationLogoutController.logout()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.versioned(path="/public", file: Asset)



